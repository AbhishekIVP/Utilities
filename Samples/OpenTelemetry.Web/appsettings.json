{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "OpenTelemetry": {
      "IncludeFormattedMessage": true,
      "IncludeScopes": false,
      "ParseStateValues": false
    }
  },
  "OpenTelemetry": {
    "Endpoint": "http://otel-collector:4317",
    "Logging": {
      "Mode": "Serilog",
      "OtelSerilog": {
        "Path": "log/OpenTelemetrySample.log"
      }
    },
    "Service": {
      "Name": "OpenTelemetrySample",
      "Version": "1.0.0.0"
    },
    "Metrics": {
      "Mode": "Otel"
    },
    "Traces": {
      "Mode": "Otel"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Fatal"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "log/service.log",
          "restrictedToMinimumLevel": "Error",
          "formatter": {
            "type": "Serilog.Formatting.Json.JsonFormatter, Serilog",
            "renderMessage": true
          },
          "fileSizeLimitBytes": "100000",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": "true"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithSpan",
      "WithProcessId",
      "WithCorrelationId",
      "WithCorrelationIdHeader",
      "WithExceptionDetails"
    ]
  },
  "AllowedHosts": "*"
}