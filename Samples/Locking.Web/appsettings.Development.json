{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "DistributedLocking": {
    "Redis": {
      "Endpoint": "192.168.77.115:6379",
      "Password": {
        "Value": "",
        "ValueFrom": "redisPassword"
      },
      "Database": 59
    }
  },
  "SecretsService": {
    "Type": "rad",
    "Endpoint": "http://localhost:5000/"
  },
  "Dapr": {
    "DefaultSecretStore": "local",
    "SideCarPort": 63842
  },
  "OpenTelemetry": {
    "Endpoint": "http://localhost:4317",
    "Logging": {
      "Mode": "Serilog",
      "OtelSerilog": {
        "Path": "log/OpenTelemetrySample.log"
      }
    },
    "Service": {
      "Name": "Locking.Web",
      "Version": "1.0.0.0"
    },
    "Metrics": {
      "Mode": "Prometheus"
    },
    "Traces": {
      "Mode": "Otel",
      "Db": {
        "CaptureQueryText": true,
        "CaptureStoreProcCall": true,
        "RecordException": true
      },
      "Http": {
        "RecordException": true
      },
      "AspNetCore": {
        "EnableGrpcAspNetCoreSupport": true,
        "RecordException": true
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Verbose"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "D:\\Code\\logs\\service.log",
          "restrictedToMinimumLevel": "Verbose",
          "formatter": {
            "type": "Serilog.Formatting.Json.JsonFormatter, Serilog",
            "renderMessage": true
          },
          "fileSizeLimitBytes": "100000",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": "true"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithSpan",
      "WithProcessId",
      "WithCorrelationId",
      "WithCorrelationIdHeader",
      "WithExceptionDetails"
    ]
  }
}